<div class="profile">
    <h1 class="profile__title">User Profile Page</h1>
    <p>Email: <%= @currentUser %></p>

    <% @posts.each do |post| %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p>User ID: <%= post.user_id %></p>
            <p class="card-text">
              <%= post.content %>
            </p>
            <%= link_to 'Show', post, class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
</div>